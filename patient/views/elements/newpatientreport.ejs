<%layout('layouts/boilerplate.ejs')%>


    <div class="row editpage mt-5">
        <h1 class="text-center mb-3 text-white">New Patient Report</h1>
        <div class="col-6 offset-3">
            <form action="/healdesk/patient/<%=p._id%>/report" method="post">
                <div class="mb-3">
                    <label class="form-label text-white" for="rid">RID</label>
                    <input class='form-control glass' type="text" required="required" name="rid" id="rid">
                </div>
                <div class="mb-3">
                    <label class="form-label text-white" for="date">Date</label>
                    <input class='form-control glass' type="datetime" required="required" name="date" id="date">
                </div>
                <div class="mb-3">
                    <label class="form-label text-white" for="doctor">Doctor</label>
                    <input class='form-control glass' type="text" required="required" name="doctor" id="doctor">
                </div>
                <div class="mb-3">
                    <label class="form-label text-white" for="prescription">Prescription</label>
                    <input class='form-control glass' type="text" required="required" name="prescription" id="prescription">
                </div>
                <div class="mb-3">
                    <label class="form-label text-white"  for="medicines">Medicine</label>
                    <input class='form-control glass' type="text" required="required" name="medicines" id="medicines">
                </div>
                <div class="mb-3">
                    <label class="form-label text-white" for="disease">Disease</label>
                    <input class='form-control glass' id="'pass" type="text" required="required" name="disease" id="disease">
                </div>
                <div class="mb-3">
                    <button class="btn glass btn-purple:hover text-white mt-3 mb-3">Add new report</button>
                </div>
            </form>
        </div>
    </div>